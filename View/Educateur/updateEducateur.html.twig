<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier Éducateur</title>
</head>
<body>
    <h1>Modifier Éducateur</h1>

    <form action="{{ path('modifier_educateur', {'id': educateur.id}) }}" method="post">
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" value="{{ educateur.nom }}" required>

        <label for="prenom">Prénom :</label>
        <input type="text" id="prenom" name="prenom" value="{{ educateur.prenom }}" required>

        <label for="email">Email :</label>
        <input type="email" id="email" name="email" value="{{ educateur.email }}" required>

        <label for="numero_tel">Numéro de Téléphone :</label>
        <input type="tel" id="numero_tel" name="numero_tel" value="{{ educateur.numero_tel }}" required>

        <label for="mot_de_passe">Mot de Passe :</label>
        <input type="password" id="mot_de_passe" name="mot_de_passe" value="{{ educateur.mot_de_passe }}" required>

        <label for="is_admin">Administrateur :</label>
        <input type="checkbox" id="is_admin" name="is_admin" {% if educateur.is_admin %}checked{% endif %}>

        <!-- Ajoutez un champ masqué pour l'ID -->
        <input type="hidden" name="id" value="{{ educateur.id }}">

        <button type="submit">Sauvegarder</button>
        <a href="{{ path('liste_educateurs') }}">Annuler</a>
    </form>
</body>
</html>
